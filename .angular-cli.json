{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "angular4-croissant-admin-lte2"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "../node_modules/admin-lte/plugins/select2/select2.min.css",
        "../node_modules/admin-lte/plugins/iCheck/minimal/_all.css",
        "../node_modules/admin-lte/plugins/iCheck/square/_all.css",
        "../node_modules/admin-lte/plugins/iCheck/flat/_all.css",
        "../node_modules/admin-lte/plugins/iCheck/line/_all.css",
        "../node_modules/admin-lte/plugins/iCheck/polaris/polaris.css",
        "../node_modules/admin-lte/plugins/iCheck/futurico/futurico.css",
        "../node_modules/font-awesome/css/font-awesome.css",
        "../node_modules/bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css",
        "styles.scss"
      ],
      "scripts": [
        "../node_modules/jquery/dist/jquery.min.js",
        "../node_modules/moment/min/moment.min.js",
        "../node_modules/admin-lte/plugins/iCheck/icheck.min.js",
        "../node_modules/admin-lte/plugins/select2/select2.min.js",
        "../node_modules/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js",
        "../node_modules/bootstrap-datepicker/dist/locales/bootstrap-datepicker.th.min.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "files": "src/**/*.ts",
      "project": "src/tsconfig.app.json"
    },
    {
      "files": "src/**/*.ts",
      "project": "src/tsconfig.spec.json"
    },
    {
      "files": "e2e/**/*.ts",
      "project": "e2e/tsconfig.e2e.json"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "scss",
    "component": {}
  }
}
